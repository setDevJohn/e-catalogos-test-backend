{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "@rocketseat/eslint-config/node",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
        "rules": {
            "prettier/prettier": [
              "error",
              {
                "endOfLine": "auto",
                "printWidth": 100,
                "tabWidth": 2,
                "singleQuote": true,
                "trailingComma": "all",
                "arrowParens": "always",
                "semi": false
              }
            ]
          }
}
